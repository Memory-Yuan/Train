<div class="row">
  <aside class="col-xs-4">
    <section>
      <h1>
        <%= gravatar_for @user, size: 52%>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-xs-8">
    <% if @user.microposts.any? %>
    <h3>Microposts (<%= @user.microposts.count %>)</h3>
    <ol class="microposts">
      <%= render @microposts %>
    </ol>
    <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>

<div>
  <%= @user.email %>
</div>